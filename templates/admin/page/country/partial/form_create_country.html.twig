<div class="card p-lg-4">
    <div class="card-header">
        <h4 class="card-title line-center">CREATE NEW COUNTRY</h4>
    </div>
    <div class="card-body ">
        <div id="update-message"></div>

        <form action="{{ path('admin_create_country_action') }}" id="country-form" method="POST" id="update-form">
            <div class="form-group">
                <label for="">Country Name<span class="ic-require">*</span></label>
                <input type="text" name="country_name" class="form-control form-control-lg to-alias" id="txt-country-title" value="" required />
                <p class="error" id="name-error" for=""></p>
            </div>
            <div class="form-group">
                <label for="">Alias<span class="ic-require">*</span></label>
                <input type="text" name="country_slug" class="form-control form-control-lg input-alias" id="txt-country-slug" value="" required />
                <p class="error" id="slug-error" for=""></p>
            </div>
            <div class="form-group">
                <label for="">ISO Code<span class="ic-require">*</span></label>
                <input type="text" name="country_iso_code" class="form-control form-control-lg" id="txt-country-iso-code" value="" oninput="this.value = this.value.toUpperCase()" required />
                <p class="error" id="iso-code-error"></p>
            </div>
            <div class="form-group">
                <label for="">Zone<span class="ic-require">*</span></label>
                <select class="form-control form-control-lg" name="zone_id" required>
                    <option value="">-- Choose a zone --</option>
                    {% for zone in zones %}
                        <option value="{{ zone.id }}">{{ zone.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="d-flex flex-nowrap align-items-center">
                <div class="custom-control custom-checkbox mr-4">
                    <input type="checkbox" name="country_active" class="custom-control-input" id="checkboxActive" onchange="handle_edit_info(this)" />
                    <label class="custom-control-label" for="checkboxActive">Active</label>
                </div>
                <button type="submit" class="btn btn-second btn-round btn-sm">Submit</button>
            </div>
        </form>
    </div>
</div>